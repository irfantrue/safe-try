{
    "name": "@minimal-effort/safe-try",
    "version": "1.1.2",
    "devDependencies": {
        "@types/bun": "^1.2.19"
    },
    "main": "./dist/main.js",
    "module": "./dist/main.js",
    "types": "./dist/main.d.ts",
    "exports": {
        "./package.json": "./package.json",
        ".": "./src/main.js"
    },
    "description": "Safe-try is a Typescript type-safe error handling library for both sync and async operations",
    "keywords": [
        "error-handling",
        "async",
        "sync",
        "try-catch",
        "retry",
        "timeout",
        "backoff",
        "resilience",
        "type-safe",
        "typescript",
        "promise",
        "result",
        "either"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/irfantrue/safe-try.git"
    },
    "scripts": {
        "check": "biome check --write --unsafe",
        "build": "rm -rf dist && bun build.ts",
        "release": "bun run build && npm publish"
    },
    "type": "module"
}
