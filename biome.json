{
    "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },
    "files": {
        "includes": ["src/**"]
    },
    "javascript": {
        "formatter": {
            "bracketSpacing": true,
            "enabled": true,
            "indentStyle": "space",
            "indentWidth": 4,
            "lineEnding": "lf",
            "quoteStyle": "single",
            "semicolons": "asNeeded",
            "trailingCommas": "all"
        },
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        }
    },
    "json": {
        "formatter": {
            "enabled": true,
            "indentStyle": "space",
            "indentWidth": 4,
            "lineEnding": "lf"
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "a11y": {
                "useButtonType": "off"
            },
            "complexity": {
                "noBannedTypes": "off",
                "noStaticOnlyClass": "off"
            },
            "correctness": {
                "noUnusedVariables": "error"
            },
            "performance": {
                "noBarrelFile": "error",
                "noDelete": "off",
                "noReExportAll": "error"
            },
            "recommended": true,
            "style": {
                "noNonNullAssertion": "off"
            },
            "suspicious": {
                "noArrayIndexKey": "off",
                "noAssignInExpressions": "off",
                "noConfusingVoidType": "off",
                "noExplicitAny": "off",
                "noRedeclare": "off",
                "noThenProperty": "off"
            }
        }
    }
}
